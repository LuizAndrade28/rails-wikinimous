<h1>All Articles</h1>

<% @articles.each do |article| %>
<h3>Book's title: <%= link_to article.title, article_path(article[:id]) %></h3>
<p>Genre:<em><%= article.content %></em></p>
<p><%= link_to "Edit", edit_article_path(article[:id]) %></p>
<p><%= link_to "Delete", article_path(article[:id]),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
<% end %>
